<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB6C1" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/playing_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="算什么男人"
            android:textColor="#fcfcfc"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playing_song_name"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/playing_song_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="周杰伦"
                android:textColor="#fcfcfc"
                android:textSize="12sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#fcfcfc90" />

            <TextView
                android:id="@+id/playing_song_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="鞋子特大"
                android:textColor="#fcfcfc"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/playing_song_album_pic"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/playing_pre"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/widget_pre_button" />

            <ImageButton
                android:id="@+id/playing"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/play_button" />

            <ImageButton
                android:id="@+id/playing_next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:background="@drawable/widget_next_button" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >
		<RelativeLayout android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <TextView android:id="@+id/play_time"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textSize="12sp"
		        android:text="00:00"/>
		    <TextView android:id="@+id/song_time"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textSize="12sp"
		        android:text="00:00"
		        android:layout_alignParentRight="true"
		        />
		</RelativeLayout>
        <SeekBar
            android:layout_marginTop="1dp"
            android:id="@+id/play_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:maxHeight="7dp"
            android:minHeight="7dp"
            android:progressDrawable="@drawable/seekbar_style2"
            android:thumb="@drawable/play_progress_thumb"
             />

    </LinearLayout>

</RelativeLayout>